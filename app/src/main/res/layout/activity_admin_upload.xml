<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <!-- Admin Info Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/adminInfoCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvAdminName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAdminEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="admin@example.com"
                android:textSize="14sp"
                android:textColor="#555" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Question -->
    <EditText
        android:id="@+id/etQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Question"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/adminInfoCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

    <!-- Option A -->
    <EditText
        android:id="@+id/etOptionA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Option A"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/etQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        tools:ignore="HardcodedText" />

    <!-- Option B -->
    <EditText
        android:id="@+id/etOptionB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Option B"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/etOptionA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Option C -->
    <EditText
        android:id="@+id/etOptionC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Option C"
        app:layout_constraintTop_toBottomOf="@id/etOptionB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Option D -->
    <EditText
        android:id="@+id/etOptionD"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Option D"
        app:layout_constraintTop_toBottomOf="@id/etOptionC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Correct Answer -->
    <EditText
        android:id="@+id/etCorrectAnswer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Correct Answer (A/B/C/D)"
        app:layout_constraintTop_toBottomOf="@id/etOptionD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Upload Button -->
    <Button
        android:id="@+id/btnUpload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Upload MCQ"
        app:layout_constraintTop_toBottomOf="@id/etCorrectAnswer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
